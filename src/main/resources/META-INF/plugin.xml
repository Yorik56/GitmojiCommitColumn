<idea-plugin>
    <id>com.github.yorik56.gitmoji-commit-column</id>
    <name>Gitmoji Commit Column</name>
    <description>
        <p>Adds a custom column to the commit log to display Gitmojis, making commit messages easier to read and understand.</p>
    </description>
    <vendor>yorik56</vendor>

    <!-- Dépendances nécessaires -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.vcs</depends>
    <depends>com.jetbrains.php</depends> <!-- Ajout explicite pour PhpStorm -->


    <!-- Extensions -->
    <extensions defaultExtensionNs="com.intellij">
        <vcsLogCustomColumn implementation="com.github.yorik56.gitmojicommitcolumn.GitmojiCustomColumn"/>
    </extensions>
</idea-plugin>
